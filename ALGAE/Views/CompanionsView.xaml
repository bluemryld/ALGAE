<UserControl x:Class="ALGAE.Views.CompanionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ALGAE.Views"
             Loaded="UserControl_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Controls -->
        <materialDesign:Card Grid.Row="0" Margin="24,24,24,12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title and Add Button -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Apps" Width="28" Height="28" Margin="0,0,12,0" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Companion Applications" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                        <TextBlock Text="{Binding Companions.Count, StringFormat=' ({0})'}" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                   VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Command="{Binding AddCompanionCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Companion"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Search and Filter Controls -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Box -->
                    <TextBox Grid.Column="0" 
                             materialDesign:HintAssist.Hint="Search companions..."
                             materialDesign:HintAssist.IsFloating="True"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,16,0"/>
                    
                    <!-- Filter ComboBox -->
                    <ComboBox Grid.Column="1" 
                              materialDesign:HintAssist.Hint="Filter"
                              materialDesign:HintAssist.IsFloating="True"
                              ItemsSource="{Binding FilterTypes}"
                              SelectedItem="{Binding FilterType}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              MinWidth="120" Margin="0,0,16,0"/>
                    
                    <!-- Clear Search Button -->
                    <Button Grid.Column="2" 
                            Command="{Binding ClearSearchCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Clear search and filters" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="FilterRemove" Width="20" Height="20"/>
                    </Button>
                    
                    <!-- Refresh Button -->
                    <Button Grid.Column="3" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Refresh">
                        <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0,24,24">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True"
                                 Width="48" Height="48"/>
                    <TextBlock Text="Loading companions..." 
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               HorizontalAlignment="Center" Margin="0,16,0,0"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel Visibility="{Binding HasCompanions, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
                    <materialDesign:PackIcon Kind="AppsBox" Width="64" Height="64" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="No companion applications found" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               HorizontalAlignment="Center" Margin="0,16,0,8"/>
                    <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               HorizontalAlignment="Center" TextAlignment="Center"
                               TextWrapping="Wrap" MaxWidth="400">
                        <Run Text="Add companion applications to enhance your gaming experience."/>
                        <LineBreak/>
                        <Run Text="Companions can be global (available for all games) or game-specific."/>
                    </TextBlock>
                    <Button Command="{Binding AddCompanionCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,24,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Your First Companion"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Companions List -->
                <ItemsControl ItemsSource="{Binding CompanionDisplayItems}"
                              Visibility="{Binding HasCompanions, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0,0,0,12" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Icon -->
                                    <Border Grid.Column="0" Width="48" Height="48" 
                                            Background="{DynamicResource AccentColorBrush}"
                                            CornerRadius="24" Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Application" Width="24" Height="24" 
                                                                 Foreground="White" 
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Information -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Companion.Name}" 
                                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                       FontWeight="SemiBold" Margin="0,0,12,0"/>
                                            
                                            <!-- Type Chip -->
                                            <materialDesign:Chip Content="{Binding Companion.Type}" 
                                                                 Style="{StaticResource MaterialDesignOutlineChip}"
                                                                 FontSize="10" Margin="0,0,8,0"/>
                                            
                                            <!-- Global/Game-Specific Chip -->
                                            <materialDesign:Chip Style="{StaticResource MaterialDesignOutlineChip}"
                                                                 FontSize="10">
                                                <materialDesign:Chip.Content>
                                                    <TextBlock Text="{Binding GameName}"/>
                                                </materialDesign:Chip.Content>
                                                <materialDesign:Chip.Background>
                                                    <SolidColorBrush Color="{DynamicResource Primary200}"/>
                                                </materialDesign:Chip.Background>
                                            </materialDesign:Chip>
                                        </StackPanel>
                                        
                                        <TextBlock Text="{Binding Companion.PathOrURL}" 
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   TextTrimming="CharacterEllipsis" 
                                                   MaxWidth="500" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                    
                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Command="{Binding DataContext.EditCompanionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Edit companion" Margin="4,0">
                                            <materialDesign:PackIcon Kind="Edit" Width="20" Height="20"/>
                                        </Button>
                                        <Button Command="{Binding DataContext.DeleteCompanionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Delete companion" Margin="4,0,0,0"
                                                Foreground="{DynamicResource ValidationErrorBrush}">
                                            <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
