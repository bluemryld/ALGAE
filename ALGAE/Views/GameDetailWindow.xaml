<Window x:Class="ALGAE.Views.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ALGAE.Views"
        Title="{Binding Game.Name, StringFormat='ALGAE - {0}', FallbackValue='ALGAE - Game Details'}" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal">
    
    <materialDesign:DialogHost>
        <Grid>
            <!-- Game Detail View Content -->
            <local:GameDetailView DataContext="{Binding}"/>
        </Grid>
    </materialDesign:DialogHost>
</Window>
