<Window x:Class="ALGAE.Views.GameVerificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Verify Detected Games" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="ConfidenceProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Verify Detected Games" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Review and select which games to add to your library" 
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Summary and Bulk Actions -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16" 
                             Style="{StaticResource MaterialDesignOutlinedCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Summary -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Information" Width="20" Height="20" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignBody1TextBlock}">
                        <Run Text="Found"/>
                        <Run Text="{Binding TotalGamesFound}" FontWeight="SemiBold"/>
                        <Run Text="games •"/>
                        <Run Text="{Binding SelectedCount}" FontWeight="SemiBold"/>
                        <Run Text="selected •"/>
                        <Run Text="{Binding HighConfidenceCount}" FontWeight="SemiBold"/>
                        <Run Text="high confidence"/>
                    </TextBlock>
                </StackPanel>
                
                <!-- Bulk Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="Select All" 
                            Command="{Binding SelectAllCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Select None" 
                            Command="{Binding SelectNoneCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="High Confidence Only" 
                            Command="{Binding SelectHighConfidenceCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Games List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DetectedGames}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,12" 
                                           Style="{StaticResource MaterialDesignOutlinedCard}"
                                           materialDesign:ElevationAssist.Elevation="Dp1">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Checkbox -->
                                <CheckBox Grid.Column="0" Grid.RowSpan="2"
                                        IsChecked="{Binding IsSelected}"
                                        VerticalAlignment="Top"
                                        Margin="0,4,16,0"/>

                                <!-- Game Info -->
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <TextBlock Text="{Binding Name}" 
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Publisher}" 
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 Visibility="{Binding HasPublisher, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text=" • " 
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 Visibility="{Binding HasPublisher, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Version}" 
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 Visibility="{Binding HasVersion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Confidence Score -->
                                <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding ConfidenceText}" 
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             HorizontalAlignment="Right"
                                             FontWeight="SemiBold"
                                             Foreground="{Binding ConfidenceColor}"/>
                                    <ProgressBar Value="{Binding ConfidencePercentage}" 
                                               Maximum="100"
                                               Width="80"
                                               Style="{StaticResource ConfidenceProgressBarStyle}"
                                               Foreground="{Binding ConfidenceColor}"/>
                                </StackPanel>

                                <!-- File Path -->
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" 
                                                               Width="14" Height="14" 
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding InstallPath}" 
                                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Detection Details -->
                                <Expander Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"
                                        Header="Detection Details" 
                                        Margin="0,8,0,0"
                                        Style="{StaticResource MaterialDesignExpander}">
                                    <StackPanel Margin="0,8,0,0">
                                        <!-- Detection Method -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Detection Method: " 
                                                     Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                     FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding DetectionMethod}" 
                                                     Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                                        </StackPanel>
                                        
                                        <!-- Reasons -->
                                        <TextBlock Text="Reasons:" 
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 FontWeight="SemiBold"
                                                 Margin="0,4,0,2"/>
                                        <ItemsControl ItemsSource="{Binding DetectionReasons}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="16,0,0,2">
                                                        <materialDesign:PackIcon Kind="ChevronRight" 
                                                                               Width="12" Height="12" 
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding}" 
                                                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Expander>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Command="{Binding AddSelectedGamesCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsEnabled="{Binding HasSelectedGames}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                               Width="16" Height="16" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding AddButtonText}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
