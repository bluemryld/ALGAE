<UserControl x:Class="ALGAE.Views.LauncherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ALGAE.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:LauncherViewModel, IsDesignTimeCreatable=False}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="24">
            <StackPanel>
                <TextBlock Text="Game Launcher" 
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Monitor and control your currently running games" 
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,16">

                <!-- Currently Running Game Section -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="Play" 
                                                     Width="24" Height="24" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Currently Running" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Running Game Info or No Game Message -->
                        <Grid Grid.Row="1">
                            <!-- No Game Running State -->
                            <StackPanel Visibility="{Binding HasRunningGame, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="0,32">
                                <materialDesign:PackIcon Kind="GamepadVariantOutline" 
                                                         Width="64" Height="64" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="No game currently running" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,8"/>
                                <TextBlock Text="Launch a game from the Games page to see details here" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>

                            <!-- Running Game Details -->
                            <Grid Visibility="{Binding HasRunningGame, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Game Icon Placeholder -->
                                <Border Grid.Column="0" 
                                        Background="{DynamicResource MaterialDesignDivider}"
                                        CornerRadius="8"
                                        Width="80" Height="80"
                                        Margin="0,0,24,0">
                                    <materialDesign:PackIcon Kind="Controller" 
                                                             Width="32" Height="32" 
                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Game Details -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding RunningGame.Name}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding RunningGame.Publisher}" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Clock" 
                                                                 Width="16" Height="16" 
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding PlayTime}" 
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Game Controls -->
                                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                    <Button Command="{Binding StopGameCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                                            Margin="0,0,0,8"
                                            ToolTip="Stop Game">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Stop" Width="16" Height="16" Margin="0,0,4,0"/>
                                            <TextBlock Text="Stop Game"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding MinimizeGameCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            ToolTip="Minimize Game">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16" Margin="0,0,4,0"/>
                                            <TextBlock Text="Minimize"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Game Statistics Section -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="ChartLine" 
                                                     Width="24" Height="24" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Session Statistics" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Statistics Grid -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Session Time -->
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="TimerOutline" 
                                                             Width="32" Height="32" 
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding SessionTime}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,4"/>
                                    <TextBlock Text="Session Time" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- CPU Usage -->
                            <Border Grid.Column="1" 
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Memory" 
                                                             Width="32" Height="32" 
                                                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding CpuUsage, StringFormat='{}{0:F1}%'}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,4"/>
                                    <TextBlock Text="CPU Usage" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Memory Usage -->
                            <Border Grid.Column="2" 
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ChipOutline" 
                                                             Width="32" Height="32" 
                                                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding MemoryUsage}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,4"/>
                                    <TextBlock Text="Memory Usage" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Game Status -->
                            <Border Grid.Column="3" 
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="{Binding StatusIcon}" 
                                                             Width="32" Height="32" 
                                                             Foreground="{Binding StatusColor}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding GameStatus}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,4"/>
                                    <TextBlock Text="Status" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Game Process Information -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24"
                                     Visibility="{Binding HasRunningGame, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="Information" 
                                                     Width="24" Height="24" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Process Information" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Process Details -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Process Details" 
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0,0,0,8"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Process ID:" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Width="100"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ProcessId}" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Started:" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Width="100"/>
                                    <TextBlock Grid.Column="1" Text="{Binding StartTime, StringFormat='HH:mm:ss'}" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Executable:" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Width="100"/>
                                    <TextBlock Grid.Column="1" Text="{Binding RunningGame.ExecutableName}" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                <TextBlock Text="Actions" 
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0,0,0,8"/>
                                
                                <Button Command="{Binding BringToFrontCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Bring to Front"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding OpenGameFolderCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Open Game Folder"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding RefreshStatsCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Refresh Stats"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Recent Sessions Section -->
                <materialDesign:Card Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="History" 
                                                     Width="24" Height="24" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Recent Sessions" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Recent Sessions List -->
                        <ListView Grid.Row="1" 
                                  ItemsSource="{Binding RecentSessions}"
                                  MaxHeight="300"
                                  Style="{StaticResource MaterialDesignListView}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Game" DisplayMemberBinding="{Binding GameName}" Width="200"/>
                                    <GridViewColumn Header="Started" DisplayMemberBinding="{Binding StartTime, StringFormat='MM/dd/yyyy HH:mm'}" Width="150"/>
                                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="100"/>
                                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignGridViewItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Empty State for Recent Sessions -->
                        <StackPanel Grid.Row="1" 
                                    Visibility="{Binding HasRecentSessions, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Margin="0,32">
                            <materialDesign:PackIcon Kind="HistoryOff" 
                                                     Width="48" Height="48" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="No recent sessions" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,8"/>
                            <TextBlock Text="Launch some games to see session history here" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
