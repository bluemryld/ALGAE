<UserControl x:Class="ALGAE.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ALGAE.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Welcome to ALGAE" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="Advanced Launcher for Games and Associated Executables" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       HorizontalAlignment="Center" 
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Quick Actions -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Add Game Button -->
            <materialDesign:Card Grid.Row="0" Grid.Column="0" 
                                 Margin="8" Padding="24"
                                 Style="{StaticResource MaterialDesignOutlinedCard}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Plus" 
                                             Width="48" Height="48" 
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Add Game" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,16,0,8"/>
                    <TextBlock Text="Add a new game to your library" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <Button Content="Add Game" 
                            Command="{Binding AddGameCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Scan for Games Button -->
            <materialDesign:Card Grid.Row="0" Grid.Column="1" 
                                 Margin="8" Padding="24"
                                 Style="{StaticResource MaterialDesignOutlinedCard}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Magnify" 
                                             Width="48" Height="48" 
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Scan for Games" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,16,0,8"/>
                    <TextBlock Text="Automatically discover installed games" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <Button Content="Scan Now" 
                            Command="{Binding ScanGamesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Recent Games -->
            <materialDesign:Card Grid.Row="1" Grid.Column="0" 
                                 Margin="8" Padding="24"
                                 Style="{StaticResource MaterialDesignOutlinedCard}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="History" 
                                             Width="48" Height="48" 
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Recent Games" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,16,0,8"/>
                    <TextBlock Text="View and launch recently played games" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <Button Content="View Recent" 
                            Command="{Binding ViewRecentGamesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Settings -->
            <materialDesign:Card Grid.Row="1" Grid.Column="1" 
                                 Margin="8" Padding="24"
                                 Style="{StaticResource MaterialDesignOutlinedCard}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Settings" 
                                             Width="48" Height="48" 
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Settings" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,16,0,8"/>
                    <TextBlock Text="Configure ALGAE preferences" 
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <Button Content="Open Settings" 
                            Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignDivider}" 
                Padding="16,8" 
                Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Information" 
                                         Width="16" Height="16" 
                                         VerticalAlignment="Center"/>
                <TextBlock Text="ALGAE is ready. Database connected." 
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           VerticalAlignment="Center" 
                           Margin="8,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
