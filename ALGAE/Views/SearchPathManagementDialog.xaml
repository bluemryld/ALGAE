<Window x:Class="ALGAE.Views.SearchPathManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage Game Search Paths" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Game Search Paths" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,16"/>
        
        <!-- Search paths list -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" 
                        Background="#F8F8F8" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal" 
                                Margin="8,4">
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding AddPathCommand}"
                                ToolTip="Add search path">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                                  Fill="Green" 
                                  Stretch="Uniform"/>
                        </Button>
                        
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding RemoveSelectedPathCommand}"
                                ToolTip="Remove selected path">
                            <Path Data="M19,13H5V11H19V13Z" 
                                  Fill="Red" 
                                  Stretch="Uniform"/>
                        </Button>
                        
                        <Separator Margin="8,4"/>
                        
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding AddCommonPathsCommand}"
                                ToolTip="Add common game paths">
                            <Path Data="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19,14.5 16.5,17.4 13,17.9V21H11V17.9C7.5,17.4 5,14.5 5,11H7A5,5 0 0,0 12,16A5,5 0 0,0 17,11H19Z" 
                                  Fill="Blue" 
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- Search paths list view -->
                <ListView Grid.Row="1" 
                          Name="SearchPathsListView"
                          ItemsSource="{Binding SearchPaths}"
                          SelectedItem="{Binding SelectedSearchPath}"
                          SelectionMode="Single"
                          Margin="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Path" Width="400" DisplayMemberBinding="{Binding Path}"/>
                            <GridViewColumn Header="Status" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,4,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                                <Setter Property="Fill" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                                <Setter Property="Fill" Value="Red"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Fill" Value="Gray"/>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                                <Setter Property="Text" Value="Valid"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                                <Setter Property="Text" Value="Invalid"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Text" Value="Unknown"/>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Games Found" Width="80" DisplayMemberBinding="{Binding GamesFound}"/>
                            <GridViewColumn Header="Last Scanned" Width="120" DisplayMemberBinding="{Binding LastScanned, StringFormat=g}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Info text -->
        <TextBlock Grid.Row="2" 
                   Text="The game scanner will search these directories for game executables. You can add custom paths or use the suggested common game locations."
                   TextWrapping="Wrap"
                   Foreground="#666666"
                   Margin="0,0,0,16"/>
        
        <!-- Dialog buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="32" 
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
