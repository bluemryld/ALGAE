<Window x:Class="ALGAE.Views.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ALGAE Game Launcher"
        Height="700" Width="450"
        MinHeight="500" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="CanResize">
    
    <materialDesign:DialogHost Identifier="LauncherDialogHost">
        <DockPanel>
            <materialDesign:ColorZone Padding="16" DockPanel.Dock="Top" Mode="PrimaryMid">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Play" Width="24" Height="24" 
                                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding GameTitle, FallbackValue='Game Launcher'}" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                ToolTip="Minimize Window"
                                Click="MinimizeWindow_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                ToolTip="Close Window"
                                Click="CloseWindow_Click">
                            <materialDesign:PackIcon Kind="WindowClose"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content Area -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">
                    
                    <!-- Current Game Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Game Icon -->
                            <Border Grid.Column="0"
                                    Width="56" Height="56" 
                                    Background="{DynamicResource PrimaryHueLightBrush}"
                                    CornerRadius="8"
                                    Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="GamepadVariantOutline" 
                                                         Width="28" Height="28" 
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="White"/>
                            </Border>
                            
                            <!-- Game Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RunningGame.Name, FallbackValue='No game currently running'}" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding GameStatus, FallbackValue='Ready to monitor'}" 
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding SessionTime, StringFormat='Session: {0}', FallbackValue='Launch a game to start monitoring'}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Stats Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Performance Statistics" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                    <TextBlock Text="Memory Usage" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding MemoryUsage, FallbackValue='0 MB'}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                    <TextBlock Text="Session Time" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SessionTime, FallbackValue='00:00:00'}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="2">
                                    <TextBlock Text="Status" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding GameStatus, FallbackValue='Idle'}" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- CPU Usage Section -->
                            <Separator Margin="0,16,0,16"/>
                            
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <materialDesign:PackIcon Kind="Memory" 
                                                             Width="20" Height="20" 
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="CPU Usage" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ProgressBar Grid.Column="0" 
                                                 Value="{Binding CpuUsage, FallbackValue=0}" 
                                                 Maximum="100"
                                                 Height="12"
                                                 VerticalAlignment="Center"
                                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding CpuUsage, StringFormat={}{0:F1}%, FallbackValue='0.0%'}" 
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"
                                               MinWidth="50"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Game Details Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Game Details" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                    <TextBlock Text="Process ID" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding ProcessId, FallbackValue='Not Available'}" 
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Started At" 
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding StartTime, StringFormat='HH:mm:ss', FallbackValue='Not Available'}" 
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Controls Card -->
                    <materialDesign:Card Padding="24" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Game Controls" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Primary Action Buttons -->
                            <StackPanel Orientation="Vertical">
                                
                                <!-- Launch Button with Profile Dropdown -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Main Launch Button -->
                                    <Button Content="Launch Game" 
                                            Command="{Binding LaunchGameCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Padding="16,8"
                                            FontWeight="SemiBold"
                                            MinWidth="120">
                                        <Button.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="Launch this game" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding DefaultProfile.ProfileName, StringFormat='Using profile: {0}', FallbackValue='Using default settings'}" 
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                    
                                    <!-- Profile Dropdown Button -->
                                    <Button x:Name="ProfileDropdownButton"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Padding="8"
                                            Margin="4,0,0,0"
                                            Click="ProfileDropdownButton_Click"
                                            Visibility="{Binding HasProfiles, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="ChevronDown" Width="16" Height="16"/>
                                        <Button.ContextMenu>
                                            <ContextMenu x:Name="ProfileContextMenu" ItemsSource="{Binding Profiles}">
                                                <ContextMenu.ItemContainerStyle>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Header" Value="{Binding ProfileName}"/>
                                                        <Setter Property="Command" Value="{Binding Path=PlacementTarget.DataContext.LaunchGameWithProfileCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                                        <Setter Property="ToolTip" Value="{Binding CommandLineArgs, StringFormat='Arguments: {0}', FallbackValue='No special arguments'}"/>
                                                    </Style>
                                                </ContextMenu.ItemContainerStyle>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <Button.ToolTip>
                                            <ToolTip Content="Choose a profile to launch with"/>
                                        </Button.ToolTip>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Other Control Buttons -->
                                <UniformGrid Columns="2" Margin="0,8,0,0">
                                    <Button Content="Stop Game" 
                                            Command="{Binding StopGameCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                            BorderBrush="{DynamicResource MaterialDesignValidationErrorBrush}"
                                            Margin="2">
                                        <Button.ToolTip>
                                            <ToolTip Content="Stop the currently running game"/>
                                        </Button.ToolTip>
                                    </Button>
                                    
                                    <Button Content="Refresh Stats" 
                                            Command="{Binding RefreshStatsCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="2">
                                        <Button.ToolTip>
                                            <ToolTip Content="Refresh performance statistics"/>
                                        </Button.ToolTip>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                            
                            <!-- Window Control Buttons -->
                            <UniformGrid Columns="2" Margin="0,8,0,0">
                                <Button Content="Minimize" 
                                        Command="{Binding MinimizeGameCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="2">
                                    <Button.ToolTip>
                                        <ToolTip Content="Minimize the game window"/>
                                    </Button.ToolTip>
                                </Button>
                                <Button Content="Bring to Front" 
                                        Command="{Binding BringToFrontCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="2">
                                    <Button.ToolTip>
                                        <ToolTip Content="Bring the game window to front"/>
                                    </Button.ToolTip>
                                </Button>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Companions Card -->
                    <materialDesign:Card Padding="24" Visibility="{Binding HasCompanions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="Apps" Width="20" Height="20" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Companion Applications" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Companions Status -->
                            <TextBlock Text="{Binding CompanionsStatus}" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Companion Control Buttons -->
                            <UniformGrid Columns="2" Margin="0,0,0,16">
                                <Button Content="Start All" 
                                        Command="{Binding StartAllCompanionsCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="{DynamicResource PrimaryHueMidBrush}"
                                        Margin="2">
                                    <Button.ToolTip>
                                        <ToolTip Content="Start all companion applications"/>
                                    </Button.ToolTip>
                                </Button>
                                
                                <Button Content="Stop All" 
                                        Command="{Binding StopAllCompanionsCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                        BorderBrush="{DynamicResource MaterialDesignValidationErrorBrush}"
                                        Margin="2">
                                    <Button.ToolTip>
                                        <ToolTip Content="Stop all running companion applications"/>
                                    </Button.ToolTip>
                                </Button>
                            </UniformGrid>
                            
                            <!-- Companions List -->
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Companions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Margin="0,0,0,8" Padding="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Status Icon -->
                                                    <materialDesign:PackIcon Grid.Column="0" 
                                                                             Kind="{Binding StatusIcon}" 
                                                                             Width="16" Height="16" 
                                                                             Foreground="{Binding StatusColor}"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                    
                                                    <!-- Companion Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Companion.Name}" 
                                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   Foreground="{DynamicResource MaterialDesignBodyLight}">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} • {1}">
                                                                    <Binding Path="Status"/>
                                                                    <Binding Path="Companion.Type"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding ErrorMessage}" 
                                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                                                   Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Start Button -->
                                                    <Button Grid.Column="2" 
                                                            Command="{Binding DataContext.StartCompanionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            ToolTip="Start companion"
                                                            Visibility="{Binding CanStart, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Margin="4,0">
                                                        <materialDesign:PackIcon Kind="Play" Width="16" Height="16" 
                                                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                    </Button>
                                                    
                                                    <!-- Stop Button -->
                                                    <Button Grid.Column="3" 
                                                            Command="{Binding DataContext.StopCompanionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            ToolTip="Stop companion"
                                                            Visibility="{Binding CanStop, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Margin="4,0">
                                                        <materialDesign:PackIcon Kind="Stop" Width="16" Height="16" 
                                                                                 Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                                    </Button>
                                                </Grid>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </materialDesign:Card>
                    
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </materialDesign:DialogHost>
</Window>
