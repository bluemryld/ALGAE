<UserControl x:Class="ALGAE.Views.GameSignaturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ALGAE.ViewModels"
             xmlns:local="clr-namespace:ALGAE"
             xmlns:converters="clr-namespace:ALGAE.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:GameSignaturesViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InvertedBooleanConverter x:Key="InvertBooleanConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
        </Style>
        
        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Margin" Value="8,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,8" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search and Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox x:Name="SearchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search signatures..."
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Width="300" 
                             VerticalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding FilteredSignatures, StringFormat='Showing {0}'}"
                               Margin="16,0,0,0" 
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    
                    <TextBlock Text="{Binding TotalSignatures, StringFormat='of {0} signatures'}"
                               Margin="4,0,0,0" 
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Add New" 
                            Command="{Binding StartAddNewCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="4,0">
                        <Button.Icon>
                            <materialDesign:PackIcon Kind="Plus"/>
                        </Button.Icon>
                    </Button>
                    
                    <Button Content="Import File" 
                            Command="{Binding ImportFromFileCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="4,0"
                            ToolTip="Import signatures from JSON file">
                        <Button.Icon>
                            <materialDesign:PackIcon Kind="FileImport"/>
                        </Button.Icon>
                    </Button>
                    
                    <Button Content="Download Latest" 
                            Command="{Binding DownloadLatestSignaturesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="4,0"
                            IsEnabled="{Binding IsDownloading, Converter={StaticResource InvertBooleanConverter}}"
                            ToolTip="Download latest signatures from GitHub">
                        <Button.Icon>
                            <materialDesign:PackIcon Kind="CloudDownload"/>
                        </Button.Icon>
                    </Button>
                    
                    <Button Content="Export" 
                            Command="{Binding ExportToFileCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="4,0"
                            ToolTip="Export signatures to JSON file">
                        <Button.Icon>
                            <materialDesign:PackIcon Kind="FileExport"/>
                        </Button.Icon>
                    </Button>
                    
                    <Button Content="Refresh" 
                            Command="{Binding LoadSignaturesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="4,0"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertBooleanConverter}}">
                        <Button.Icon>
                            <materialDesign:PackIcon Kind="Refresh"/>
                        </Button.Icon>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Signatures List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,4,0">
                <Grid>
                    <DataGrid x:Name="SignaturesGrid"
                              ItemsSource="{Binding SignaturesView}"
                              SelectedItem="{Binding SelectedSignature}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="{DynamicResource MaterialDesignDivider}"
                              materialDesign:DataGridAssist.CellPadding="8,4"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="8,4">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*" 
                                                MinWidth="150"/>
                            
                            <DataGridTextColumn Header="Short Name" 
                                                Binding="{Binding ShortName}" 
                                                Width="100"/>
                            
                            <DataGridTextColumn Header="Executable" 
                                                Binding="{Binding ExecutableName}" 
                                                Width="150"/>
                            
                            <DataGridTextColumn Header="Publisher" 
                                                Binding="{Binding Publisher}" 
                                                Width="120"/>
                            
                            <DataGridTemplateColumn Header="Match Criteria" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="N" Foreground="Green" 
                                                       Visibility="{Binding MatchName, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       ToolTip="Match Name" Margin="2,0"/>
                                            <TextBlock Text="V" Foreground="Orange" 
                                                       Visibility="{Binding MatchVersion, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       ToolTip="Match Version" Margin="2,0"/>
                                            <TextBlock Text="P" Foreground="Blue" 
                                                       Visibility="{Binding MatchPublisher, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       ToolTip="Match Publisher" Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit" 
                                          Command="{Binding StartEditCommand}"
                                          Icon="{materialDesign:PackIcon Kind=Edit}"/>
                                <MenuItem Header="Delete" 
                                          Command="{Binding DeleteSignatureCommand}"
                                          Icon="{materialDesign:PackIcon Kind=Delete}"/>
                                <Separator/>
                                <MenuItem Header="Add New" 
                                          Command="{Binding StartAddNewCommand}"
                                          Icon="{materialDesign:PackIcon Kind=Plus}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <!-- Loading Overlay -->
                    <Grid Background="#80FFFFFF" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         IsIndeterminate="True"
                                         Width="48" Height="48"/>
                            <TextBlock Text="Loading signatures..." 
                                       Margin="0,8,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="4" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" 
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- Editor Panel -->
            <materialDesign:Card Grid.Column="2" Margin="4,0,0,0">
                <Grid>
                    <!-- Edit Form -->
                    <ScrollViewer Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            <TextBlock Text="{Binding IsAddingNew, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Add New Signature|Edit Signature'}"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="0,0,0,16"/>

                            <TextBox Text="{Binding EditingSignature.Name, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Game Name*"/>

                            <TextBox Text="{Binding EditingSignature.ShortName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Short Name"/>

                            <TextBox Text="{Binding EditingSignature.ExecutableName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Executable Name*"/>

                            <TextBox Text="{Binding EditingSignature.Publisher, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Publisher"/>

                            <TextBox Text="{Binding EditingSignature.Version, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Version"/>

                            <TextBox Text="{Binding EditingSignature.MetaName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Meta Name (from file properties)"/>

                            <TextBox Text="{Binding EditingSignature.Description, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Description"
                                     TextWrapping="Wrap"
                                     MinLines="2" MaxLines="4"/>

                            <TextBox Text="{Binding EditingSignature.GameArgs, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Launch Arguments"/>

                            <TextBox Text="{Binding EditingSignature.GameImage, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Game Image Path"/>

                            <TextBox Text="{Binding EditingSignature.ThemeName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Theme Name"/>

                            <GroupBox Header="Match Criteria" 
                                      Style="{StaticResource MaterialDesignGroupBox}" 
                                      Margin="0,16,0,8">
                                <StackPanel>
                                    <CheckBox Content="Match Executable Name" 
                                              IsChecked="{Binding EditingSignature.MatchName}"/>
                                    <CheckBox Content="Match Version" 
                                              IsChecked="{Binding EditingSignature.MatchVersion}"/>
                                    <CheckBox Content="Match Publisher" 
                                              IsChecked="{Binding EditingSignature.MatchPublisher}"/>
                                </StackPanel>
                            </GroupBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                <Button Content="Cancel" 
                                        Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Save" 
                                        Command="{Binding SaveSignatureCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Details Panel -->
                    <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"
                                Margin="16">
                        <TextBlock Text="Signature Details" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,16"/>

                        <Grid Visibility="{Binding SelectedSignature, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=False}">
                            <StackPanel DataContext="{Binding SelectedSignature}">
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1" TextWrapping="Wrap"/>
                                </Grid>

                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Short Name:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding ShortName}" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Executable:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding ExecutableName}" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="0,8" Visibility="{Binding Publisher, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Publisher:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Publisher}" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="0,8" Visibility="{Binding Version, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Version:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Version}" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="0,8" Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Description:" Grid.Column="0" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Description}" Grid.Column="1" TextWrapping="Wrap"/>
                                </Grid>

                                <GroupBox Header="Match Criteria" 
                                          Style="{StaticResource MaterialDesignGroupBox}" 
                                          Margin="0,16,0,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CheckboxMarkedCircle" 
                                                                     Foreground="Green" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchName, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <materialDesign:PackIcon Kind="MinusCircle" 
                                                                     Foreground="Gray" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchName, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                                            <TextBlock Text="Match Executable Name" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <materialDesign:PackIcon Kind="CheckboxMarkedCircle" 
                                                                     Foreground="Green" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchVersion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <materialDesign:PackIcon Kind="MinusCircle" 
                                                                     Foreground="Gray" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchVersion, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                                            <TextBlock Text="Match Version" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <materialDesign:PackIcon Kind="CheckboxMarkedCircle" 
                                                                     Foreground="Green" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchPublisher, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <materialDesign:PackIcon Kind="MinusCircle" 
                                                                     Foreground="Gray" 
                                                                     Width="16" Height="16" 
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding MatchPublisher, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                                            <TextBlock Text="Match Publisher" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Visibility="{Binding SelectedSignature, Converter={StaticResource NullToVisibilityConverter}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                     Width="48" Height="48" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a signature to view details" 
                                       Margin="0,8,0,0" 
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,16,0,0"
                                    Visibility="{Binding SelectedSignature, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=False}">
                            <Button Content="Edit" 
                                    Command="{Binding StartEditCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,0">
                                <Button.Icon>
                                    <materialDesign:PackIcon Kind="Edit"/>
                                </Button.Icon>
                            </Button>
                            <Button Content="Delete" 
                                    Command="{Binding DeleteSignatureCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                <Button.Icon>
                                    <materialDesign:PackIcon Kind="Delete"/>
                                </Button.Icon>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="2" Margin="0,8,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" 
                           Grid.Column="0" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True"
                                 Width="16" Height="16"
                                 VerticalAlignment="Center"/>
                    <TextBlock Text="Downloading..." 
                               Margin="8,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
