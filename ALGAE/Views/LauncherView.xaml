<UserControl x:Class="ALGAE.Views.LauncherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Play" Width="24" Height="24" 
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Game Launcher" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                
                <!-- Current Game Card -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Game Icon -->
                        <Border Grid.Column="0"
                                Width="56" Height="56" 
                                Background="{DynamicResource PrimaryHueLightBrush}"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="GamepadVariantOutline" 
                                                     Width="28" Height="28" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"/>
                        </Border>
                        
                        <!-- Game Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding RunningGame.Name, FallbackValue='No game currently running'}" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding GameStatus, FallbackValue='Ready to monitor'}" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding SessionTime, StringFormat='Session: {0}', FallbackValue='Launch a game to start monitoring'}" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                
                <!-- Stats Card -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Performance Statistics" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Memory Usage" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="{Binding MemoryUsage, FallbackValue='0 MB'}" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="16,0">
                                <TextBlock Text="Session Time" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="{Binding SessionTime, FallbackValue='00:00:00'}" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Status" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="{Binding GameStatus, FallbackValue='Idle'}" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- CPU Usage Section -->
                        <Separator Margin="0,16,0,16"/>
                        
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Memory" 
                                                         Width="20" Height="20" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="CPU Usage" 
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ProgressBar Grid.Column="0" 
                                             Value="{Binding CpuUsage, FallbackValue=0}" 
                                             Maximum="100"
                                             Height="12"
                                             VerticalAlignment="Center"
                                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CpuUsage, StringFormat={}{0:F1}%, FallbackValue='0.0%'}" 
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           MinWidth="50"/>
                            </Grid>
                            
                            <TextBlock Text="Real-time performance monitoring" 
                                       Style="{StaticResource MaterialDesignCaption}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Game Details Card (Process Info) -->
                <materialDesign:Card Margin="0,0,0,16" Padding="24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Game Details" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Process ID" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="{Binding ProcessId, FallbackValue='Not Available'}" 
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Started At" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="{Binding StartTime, StringFormat='HH:mm:ss', FallbackValue='Not Available'}" 
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Controls Card -->
                <materialDesign:Card Padding="24">
                    <StackPanel>
                        <TextBlock Text="Game Controls" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Refresh Stats" 
                                    Command="{Binding RefreshStatsCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="4">
                                <Button.ToolTip>
                                    <ToolTip Content="Refresh performance statistics"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Content="Stop Game" 
                                    Command="{Binding StopGameCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                                    Margin="4">
                                <Button.ToolTip>
                                    <ToolTip Content="Stop the currently running game"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Content="Minimize" 
                                    Command="{Binding MinimizeGameCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="4">
                                <Button.ToolTip>
                                    <ToolTip Content="Minimize the game window"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Content="Bring to Front" 
                                    Command="{Binding BringToFrontCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="4">
                                <Button.ToolTip>
                                    <ToolTip Content="Bring the game window to front"/>
                                </Button.ToolTip>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
